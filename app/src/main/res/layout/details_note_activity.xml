<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/indent_x1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/full_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="@dimen/indent_x3"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/indent_x1"
        android:hint="+79370872329"
        android:maxLines="1"
        android:textSize="@dimen/indent_x2"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/note_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите текст заметки"
        android:textSize="@dimen/indent_x2" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save" />
</LinearLayout>