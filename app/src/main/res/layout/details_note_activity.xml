<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/indent_x1">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Владимир Бобров"
        android:maxLines="2"
        android:textSize="@dimen/indent_x3"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/data_text_view"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/indent_x1"
        android:layout_height="wrap_content"
        android:hint="+79370872329"
        android:maxLines="1"
        android:textSize="@dimen/indent_x2"
        android:textStyle="italic" />

   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Введите текст заметки"
       android:textSize="@dimen/indent_x2"/>
</LinearLayout>