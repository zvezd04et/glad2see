<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:contentPadding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout android:id="@+id/news_item_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Владимир Бобров"
                android:maxLines="2"
                android:textSize="@dimen/indent_x2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/data_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="+79370872329"
                android:maxLines="1"
                android:textSize="@dimen/indent_x2"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/notes_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Вова должен мне 200р"
                android:maxLines="1"
                android:textSize="@dimen/indent_x2" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>